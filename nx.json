{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "nxCloudAccessToken": "NzNkMDZiM2MtMzVlOS00YzVlLWE1MGQtNWZlYzI3MjRkOTRmfHJlYWQ=",
  "plugins": [
    "@nx/eslint/plugin",
    {
      "plugin": "@nx/js/typescript",
      "include": [
        "packages/builder/**",
        "packages/eslint-plugin-template/**",
        "packages/eslint-plugin/**"
      ],
      "options": {
        "build": {
          "targetName": "compile"
        }
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "exclude": [
        "*",
        "packages/builder/**",
        "packages/bundled-angular-compiler/**",
        "packages/eslint-plugin-template/**",
        "packages/eslint-plugin/**",
        "packages/nx-plugin/**",
        "packages/schematics/**"
      ],
      "options": {
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json"
        }
      }
    }
  ],
  "release": {
    "projects": ["*", "!e2e*", "!nx-plugin"],
    "version": {
      "conventionalCommits": true
    },
    "changelog": {
      "workspaceChangelog": {
        "createRelease": "github"
      },
      "projectChangelogs": true
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "update-rule-docs": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "update-rule-lists": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ],
      "options": {
        "ignore-path": "../../.eslintignore"
      },
      "cache": true
    },
    "e2e": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "e2e-suite": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "check-rule-docs": {
      "cache": true
    },
    "check-rule-lists": {
      "cache": true
    },
    "@nx/jest:jest": {
      "dependsOn": ["^build"],
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals", "projectSpecificFiles"],
    "sharedGlobals": [
      "{workspaceRoot}/.github/workflows/ci.yml",
      {
        "runtime": "node -e 'console.log(`${process.platform}-${process.arch}`)'"
      },
      {
        "runtime": "node --version"
      },
      {
        "runtime": "npm --version"
      },
      {
        "runtime": "yarn --version"
      }
    ],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "projectSpecificFiles": []
  }
}
