{
  "name": "e2e",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "e2e/src",
  "targets": {
    "local-registry": {
      "executor": "@nx/js:verdaccio",
      "options": {
        "port": 4873,
        "config": "e2e/.verdaccio/config.yml",
        "storage": "dist/local-registry/storage",
        "clear": false
      }
    },
    "populate-local-registry-storage": {
      "cache": true,
      "inputs": [
        {
          "input": "production",
          "projects": ["tag:npm:public"]
        },
        "{workspaceRoot}/e2e/scripts/populate-storage.js"
      ],
      "dependsOn": [
        "local-registry",
        {
          "target": "build",
          "projects": ["tag:npm:public"]
        }
      ],
      "command": "node ./e2e/scripts/run-populate-storage.mjs",
      "outputs": ["{workspaceRoot}/dist/local-registry/storage"]
    }
  }
}
