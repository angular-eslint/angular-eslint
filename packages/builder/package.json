{
  "name": "@angular-eslint/builder",
  "version": "12.0.0-alpha.4",
  "description": "Angular CLI builder for ESLint",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc --project tsconfig.build.json && terser ./dist/index.js --output=./dist/index.js",
    "postbuild": "ncp src/schema.json dist/schema.json",
    "test": "jest --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-eslint/angular-eslint.git",
    "directory": "packages/builder"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE",
    "builders.json"
  ],
  "builders": "./builders.json",
  "peerDependencies": {
    "@angular/cli": ">= 12.0.0 < 13.0.0",
    "eslint": "*",
    "typescript": "*"
  },
  "gitHead": "5a2b46daeb65442f6e71697bad863b90f611921b"
}
